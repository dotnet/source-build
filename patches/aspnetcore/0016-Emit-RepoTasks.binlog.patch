---
 build.sh | 1 +
 1 file changed, 1 insertion(+)

diff --git a/build.sh b/build.sh
index 3c3cab39ce..029bb4f0c8 100755
--- a/build.sh
+++ b/build.sh
@@ -360,6 +360,7 @@ if [ "$build_repo_tasks" = true ]; then
         -p:Restore=$run_restore \
         -p:Build=true \
         -clp:NoSummary \
+        -bl:RepoTasks.binlog \
         ${toolset_build_args[@]+"${toolset_build_args[@]}"}
 fi
 
