+                linksElement.Add(new XElement(s_dgmlns + Link,
+                    new XAttribute(Source, Root),
+                    new XAttribute(Target, GetPackageId(packageRoot)),
+                    new XAttribute(Category, RootCategory),
+                    new XAttribute(IncludedProperty, true)));
+            }
