       /restore \
       /p:Configuration=$bootstrap_config \
+      /bl:proto-fsc-bootstrap.binlog
 
 
-    cp -pr $artifacts_dir/bin/fsc/$bootstrap_config/netcoreapp3.1 $bootstrap_dir/fsc
