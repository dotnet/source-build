From: dseefeld <dseefeld@microsoft.com>
Date: Mon, 13 Jan 2020 17:02:22 +0000
Subject: [PATCH] Conditionally include crossgen2 when packaging

---
 src/coreclr/src/.nuget/packages.builds | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/src/coreclr/src/.nuget/packages.builds b/src/coreclr/src/.nuget/packages.builds
index fa33f6a..d99cef4 100644
--- a/src/coreclr/src/.nuget/packages.builds
+++ b/src/coreclr/src/.nuget/packages.builds
@@ -21,7 +21,7 @@
     <ProjectReference Include="Microsoft.NETCore.ILDAsm\Microsoft.NETCore.ILDAsm.builds" />
   </ItemGroup>
 
-  <ItemGroup Condition="'$(BuildArch)'=='x64' And ('$(__BuildOS)' == 'Windows_NT' Or '$(__BuildOS)' == 'Linux')">
+  <ItemGroup Condition="'$(BuildArch)'=='x64' And '$(BuildManagedTools)' == 'true' And ('$(__BuildOS)' == 'Windows_NT' Or '$(__BuildOS)' == 'Linux')">
     <ProjectReference Include="Microsoft.NETCore.Crossgen2\Microsoft.NETCore.Crossgen2.builds" />
   </ItemGroup>
 
