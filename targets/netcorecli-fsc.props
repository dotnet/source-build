<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <ProjectDirectory Condition="'$(PathToRepo)' != ''">$(PathToRepo)</ProjectDirectory>
    <BuildCommand>$(ProjectDirectory)build$(ShellExtension) /t:Package</BuildCommand>
    <BuildPackagesCommand></BuildPackagesCommand>
    <PackagesOutput>$(ProjectDirectory)/artifacts/nupkgs/</PackagesOutput>
    <CleanCommand>$(ProjectDirectory)/clean$(ShellExtension)</CleanCommand>
  </PropertyGroup>

  <ItemGroup>
    <Source Include="$(ProjectDirectory)/**/*.*" />
  </ItemGroup>   
</Project>

