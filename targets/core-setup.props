<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <ProjectDirectory Condition="'$(PathToRepo)' != ''">$(PathToRepo)</ProjectDirectory>
    <BuildArguments>-ConfigurationGroup=$(Configuration) -PortableBuild=true -strip-symbols</BuildArguments>
    <BuildArguments Condition="$(Platform.Contains('arm'))">$(BuildArguments) -TargetArchitecture=arm -DistroRid=linux-arm -DisableCrossgen=true -SkipTests=true -CrossBuild=true</BuildArguments>
    <BuildCommand>$(ProjectDirectory)/build$(ShellExtension) $(BuildArguments)</BuildCommand>
    <BuildCommand Condition="$(Platform.Contains('arm'))">$(ArmEnvironmentVariables) $(BuildCommand)</BuildCommand>
    <PackagesOutput>$(ProjectDirectory)/Bin/$(TargetRid).$(Configuration)/packages/</PackagesOutput>
    <PortableRid Condition="$(TargetRid.Contains('win'))">win-$(Platform)</PortableRid>
    <PortableRid Condition="$(TargetRid.Contains('osx'))">osx-$(Platform)</PortableRid>
    <PortableRid Condition="'$(PortableRid)' == ''">linux-$(Platform)</PortableRid>
    <PackagesOutput Condition="!Exists('$(PackagesOutput)')">$(ProjectDirectory)/Bin/$(PortableRid).$(Configuration)/packages/</PackagesOutput>
    <BinariesOutput>$(PackagesOutput)</BinariesOutput>
    <UpdateCommand> $(ProjectDirectory)Tools/msbuild$(ShellExtension) $(ProjectDirectory)build.proj /t:UpdateDependencies /p:BuildInfoCacheDir=$(VersionFileDirectory)</UpdateCommand>
  </PropertyGroup>

  <ItemGroup>
    <RepositoryReference Include="coreclr" />
    <RepositoryReference Include="corefx" />
    <RepositoryReference Include="standard" />
  </ItemGroup>
</Project>
