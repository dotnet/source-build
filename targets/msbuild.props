<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <ProjectDirectory Condition="'$(PathToRepo)' != ''">$(PathToRepo)</ProjectDirectory>
    <DotNetTool>$(ToolsDir)/dotnetcli/dotnet</DotNetTool>
    <SolutionToBuild>$(ProjectDirectory)/NetCore.sln</SolutionToBuild>
    <PackagesOutput>$(ProjectDirectory)/bin/$(Configuration)/packages</PackagesOutput>
    <BuildCommand>$(DotNetTool) pack $(SolutionToBuild) /p:Configuration=$(Configuration) /p:PackageOutputPath=$(PackagesOutput)</BuildCommand>
  </PropertyGroup>
</Project>
